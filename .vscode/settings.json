{
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "biomejs.biome",
    "editor.codeActionsOnSave": {
        "source.organizeImports.biome": "explicit",
        "source.fixAll.biome": "explicit"
    },
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "files.associations": {
        "*.css": "tailwindcss"
    },
    "css.validate": false,
    "scss.validate": false
}
